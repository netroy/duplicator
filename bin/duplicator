#!/usr/bin/env node
// vim: set ft=javascript:
(function() {

  "use strict";

  var cluster = require('cluster');

  var logLabel = '[Cluster]';
  try {
    require('colors');
    logLabel = logLabel.blue;
  }catch(e) {}

  var log = module.log = console.log.bind(console, logLabel);

  // Spawn worker or master
  var requiredModule = cluster.isMaster ? './master' : './worker';
  require(requiredModule).init();

}).call();